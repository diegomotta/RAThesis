<div class="container">
  <div class="center-block">
    <div class="col-md-8 col-lg-offset-3"></div>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h2 class="panel-title text-center" >Proceso de Elaboración</h2>
      </div>
      <div class="col-md-3 col-lg-offset-5">
        <div class="btn-group">
          <a ><%= link_to "<button type='button'class='btn btn-info'>Nuevo</button>".html_safe, new_empresa_producto_galeria_proceso_path %></a> 
        </div>
        <div class="btn-group">
          <a ><%= link_to "<button type='button'class='btn btn-info'>Volver</button>".html_safe, empresa_producto_path(@empresa,@producto)%></a>  
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-striped">                             
            <tr class="info">
              <th  class="text-center"><h5><b>Título</b></h5></th>
              <th  class="text-center"><h5><b>Descripción</b></h5></th>
              <th  class="text-center"><h5><b>Imagen</b></h5></th>
              <th  class="text-center"><h5><b>Acciones</b></h5></th>
            </tr>
            <% if @producto.galeria_procesos.empty? == false%>
            <% @galeria_procesos.each do |galeria_proceso| %>
            <tr>
              <td><h5><%= galeria_proceso.título %></h5></td>
              <td><h5><%= galeria_proceso.descrición %></h5></td>
              <td><%= image_tag galeria_proceso.image.url(:thumb) %></td>
              <td class="text-center">
                <div class="btn-group-vertical">
                  <a><%= link_to 'Ver', empresa_producto_galeria_proceso_path(@empresa,@producto,galeria_proceso),:class => "btn btn-info btn-raised" %></a>
                  <a><%= link_to 'Editar', edit_empresa_producto_galeria_proceso_path(@empresa,@producto,galeria_proceso),:class => "btn btn-info btn-raised" %></a>
                  <a><%= link_to 'Eliminar', empresa_producto_galeria_proceso_path(@empresa,@producto,galeria_proceso), method: :delete, data: { confirm: 'Are you sure?'},:class => "btn btn-info btn-raised"  %></a>
                </div>
              </td>
            </tr>
            <% end %>
            <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

<%= form_for ([@empresa, @video]) do |f| %>
  <% if @video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

      <ul>
      <% @video.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-horizontal" >
      <fieldset>
        <legend>Datos del Video</legend>
          <div class="form-group">
            <label for="" class="col-lg-4 control-label">Título del video:</label>
            <div class="col-lg-12">
              <%= f.text_field :titulo, class: "form-control", placeholder: "Titulo del video"%>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="col-lg-4 control-label">Dirección URL:</label>
            <div class="col-lg-12">
              <%= f.text_field :url, class: "form-control", placeholder: "Dirección URL"%>
            </div>
          </div>   
          <div class="form-group">
            <label for="" class="col-lg-4 control-label">Descripción:</label>
            <div class="col-lg-12">
              <%= f.text_area :descripcion, class: "form-control", placeholder: "Descripción"%>
            </div>
          </div>                    
          <div class="form-group">
              <div class="col-lg-12 text-center">
                  <%= f.submit "Guardar", class: "btn btn-info btn-raised" %>
                  <%= link_to 'Atrás', empresa_videos_path,class: "btn btn-info btn-raised" %>
              </div>
          </div>
      <% end %>
      </fieldset>
  </form>

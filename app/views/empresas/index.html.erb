<div class="container">
<div class="col-lg-8 col-lg-offset-2 text-center">
  <h2>Marcas</h2>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr class="info">
      <th><h4>Nombre</h4></th>
      <th><h4>Actividad</h4></th>
      <th><h4>Provincia</h4></th>
      <th><h4>Localidad</h4></th>
      <th><h4>Dirección</h4></th>
      <th><h4>Telefono</h4></th>
      <th><h4>Acciones</h4></th>

    </tr>
  </thead>
  <tbody>
    <% @empresas.each do |empresa| %>
    <div class="row">
            <tr class="active">
              <td ><h4><%= empresa.nombre%></h4></td>
              <td ><h4><%= empresa.actividad %></h4></td>
              <td ><h4><%= empresa.país %></h4></td>
              <td ><h4><%= empresa.provincia %></h4></td>
              <td ><h4><%= empresa.localidad %></h4></td>
              <td ><h4><%= empresa.dirección %></h4></td>
              <td ><h4><%= empresa.telefono %></h4></td>
              <td ><h4><%= empresa.misión %></h4></td>
              <td ><h4><%= empresa.visión %></h4></td>
          <div class="col-lg-2">
              <td>
                <div class="btn-group">
                    <%= link_to 'Ver', empresa ,:class => "btn btn-success"%>
                    <%= link_to 'Editar', edit_empresa_path(empresa) ,:class => "btn btn-success"%>
                    <%= link_to 'Eliminar', empresa_path(empresa), method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-success"%>

                    <a class="btn btn-info">Info</a>
                    <a href="bootstrap-elements.html" data-target="#" class="btn btn-info dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                      <ul class="dropdown-menu">

                          <li><%= link_to 'Noticias',empresa_noticia_empresas_path(empresa) ,:class => "btn btn-info btn-raised" %></li>
                          <li><%= link_to 'Información de la empresa',empresa_informacion_empresas_path(empresa) ,:class => "btn btn-info btn-raised" %></li>
                          <li><%= link_to 'Productos',empresa_productos_path(empresa),:class => "btn btn-info btn-raised"  %></li>
                          <li><%= link_to 'GeoPosiciones', empresa_ubicacion_geos_path(empresa),:class => "btn btn-info btn-raised"  %></li>
                          <li><%= link_to 'Videos', empresa_videos_path(empresa),:class => "btn btn-info btn-raised"  %></li>      
                          <li><%= link_to 'Consultas', empresa_consulta_clientes_path(empresa),:class => "btn btn-info btn-raised"  %></li>                                  
                      </ul>
                  </div>
              </td> 
            </div>   
          </tr>
    </div>
    <% end %>

    </div>
  </tbody>
  </table>     

<%= link_to 'Nueva Empresa', new_empresa_path ,:class => "btn btn-success"%>


<%= form_for([@empresa,@consulta_cliente]) do |f| %>
  <% if @consulta_cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@consulta_cliente.errors.count, "error") %> prohibited this consulta_cliente from being saved:</h2>

      <ul>
      <% @consulta_cliente.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<form class="form-horizontal" >
    <fieldset>
        <legend>Datos de Consulta</legend>
        <div class="form-group">
          <label for="" class="col-lg-2 control-label">Nombre:</label>
          <div class="col-lg-12">
            <%= f.text_field :nombre, class: "form-control", placeholder: "Nombre"%>
          </div>
        </div>
        <div class="form-group">
          <label for="" class="col-lg-2 control-label">Correo electrónico:</label>
          <div class="col-lg-12"> 
            <%= f.text_field :correo, class: "form-control", placeholder: "Correo electrónico"%>
          </div>
        </div>        
        <div class="form-group">
          <label for="" class="col-lg-2 control-label">Teléfono:</label>
          <div class="col-lg-12"> 
            <%= f.text_field :telefono, class: "form-control", placeholder: "Teléfono"%>
          </div>
        </div>   
        <div class="form-group">
          <label for="" class="col-lg-2 control-label">Descripción:</label>
          <div class="col-lg-12"> 
            <%= f.text_area :descripcion, class: "form-control", placeholder: "Descripción"%>
          </div>
        </div>   
        <div class="form-group">
            <div class="col-lg-12 text-center">
                <%= f.submit "Guardar", class: "btn btn-info btn-raised" %>
                <%= link_to 'Atrás', empresa_consulta_clientes_path,class: "btn btn-info btn-raised" %>
            </div>
        </div>
    </fieldset>
  </form>

<% end %>

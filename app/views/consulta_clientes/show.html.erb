<%= form_for([@empresa, @consulta_cliente]) do |f| %>
<!--<%= link_to 'Edit', edit_empresa_consulta_cliente_path(@empresa,@consulta_cliente) %> -->
<div class="container">
<div class="row">
	    <div class="col-lg-7 col-lg-offset-3">
	        <div class="panel panel-info">
	            <div class="panel-heading">
	                <h2 class="panel-title">Consulta de Clientes</h2>
	            </div>
	                
	            <div class="panel-body">
	                <form class="form-horizontal" >
	                <legend>Datos de la Consulta</legend>
	                    <fieldset>
	                        <div class="form-group">
	                            <label for="" class="col-lg-4 control-label">Nombre:</label>
	                            <div class="col-lg-12">
	                                <input class="form-control" value=<%= @consulta_cliente.nombre %> disabled = true>
	                            </div>
	                        </div>    
	                        <div class="form-group">
	                            <label for="" class="col-lg-4 control-label">Correo electrónico:</label>
	                            <div class="col-lg-12">
	                                <input class="form-control" value=<%= @consulta_cliente.correo  %> disabled = true>
	                            </div>
	                        </div>              
	                        <div class="form-group">
	                            <label for="" class="col-lg-4 control-label">Teléfono:</label>
	                            <div class="col-lg-12">
	                                <input class="form-control" value=<%= @consulta_cliente.telefono %> disabled = true>
	                            </div>
	                        </div>    
	                        <div class="form-group">
	                            <label for="" class="col-lg-4 control-label">Descripcion:</label>
	                            <div class="col-lg-12">
	                            	<%= text_area_tag 'd', @consulta_cliente.descripcion, :class =>"form-control", :disabled =>true %>
	                            </div>
	                        </div>  
			                <div class="form-group center-block">
					            <div class="col-lg-8 col-lg-offset-2 text-center">
									<a ><%= link_to 'Volver', empresa_consulta_clientes_path ,:class => "btn btn-info btn-raised "%></a>   
					            </div>
					        </div>                                                                 
	                    </fieldset>
	                </form>  
	            </div> 
	        </div>
	    </div>
	    </div>
</div>
<%end%>
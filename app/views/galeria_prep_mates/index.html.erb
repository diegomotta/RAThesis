<div class="container">
  <div class="center-block">
    <div class="col-md-8 col-lg-offset-3"></div>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h2 class="panel-title text-center" >Preparación para el Consumo</h2>
      </div>
      <div class="col-md-3 col-lg-offset-5">
        <div class="btn-group">
          <a ><%= link_to "<button type='button'class='btn btn-info'>Nuevo</button>".html_safe, new_empresa_producto_galeria_prep_mate_path %></a> 
        </div>
        <div class="btn-group">
          <a ><%= link_to "<button type='button'class='btn btn-info'>Volver</button>".html_safe, empresa_producto_path(@empresa,@producto)%></a>  
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-striped">                             
             <tr class="info">
                <th class="text-center">Título</th>
                <th class="text-center">Descripción</th>
                <th class="text-center">Imagen</th>
                <th class="text-center">Acciones</th>
             </tr>
             <%if  @producto.galeria_prep_mates.empty? == false %>
              <% @galeria_prep_mates.each do |galeria_prep_mate| %>
                <tr>
                  <td><h5><%= galeria_prep_mate.título %></h5></td>
                  <td><h5><%= galeria_prep_mate.descrición %></h5></td>
                  <td class="col-md-3"><h5><%= image_tag galeria_prep_mate.image.url(:thumb) %></h5></td>
                  <td class="text-center">
                    <div class="btn-group-vertical">
                      <a><%= link_to 'Ver', empresa_producto_galeria_prep_mate_path(@empresa,@producto,galeria_prep_mate),:class => "btn btn-info btn-raised" %></a>
                      <a><%= link_to 'Editar', edit_empresa_producto_galeria_prep_mate_path(@empresa,@producto,galeria_prep_mate),:class => "btn btn-info btn-raised" %></a>
                      <a><%= link_to 'Eliminar', empresa_producto_galeria_prep_mate_path(@empresa,@producto,galeria_prep_mate), method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-info btn-raised" %></a>
                    </div>
                  </td>
                </tr>
            <% end %>
            <% end %>
        </table>
      </div>
    </div>
  </div>
</div>


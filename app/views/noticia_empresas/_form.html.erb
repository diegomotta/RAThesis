<%= form_for ([@empresa,@noticia_empresa])  do |f| %>
  <% if @noticia_empresa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@noticia_empresa.errors.count, "error") %> prohibited this noticium from being saved:</h2>

      <ul>
      <% @noticia_empresa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-horizontal" >
      <fieldset>
        <legend><h3>Datos de Noticias</h3></legend>
          <div class="form-group">
          <label for="" class="col-lg-2 control-label">Titulo:</label>
             <!-- <%= f.label :titulo, class: "col-lg-2 control-label"  %>-->
            <div class="col-lg-10">
              <%= f.text_field :titulo, class: "form-control", placeholder: "Título"%>
            </div>
          </div>
          <div class="form-group">
              <label for="" class="col-lg-2 control-label">Descripción:</label>
            <div class="col-lg-10">
              <%= f.text_area :descripcion, class: "form-control", placeholder: "Descripción"%>
            </div>
          </div>
          <div class="form-group">
              <label for="" class="col-lg-2 control-label">Imagen:</label>
            <div class="col-lg-10">
              <%= f.file_field :image, class: "form-control"%>
            </div>
          </div>
       <div class="col-lg-offset-4">
              <div class="btn-group">
                  <%= f.submit "Guardar", class: "btn btn-info btn-raised" %>
              </div>
              <div class="btn-group">
                  <%= link_to 'Atrás', empresa_noticia_empresas_path,class: "btn btn-info btn-raised" %>
              </div>
          </div>
      <% end %>
      </fieldset>
  </form>


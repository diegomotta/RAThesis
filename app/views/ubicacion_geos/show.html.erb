<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="container">
  <div class="row">
        <div class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h2 class="panel-title">Ubicación geográfica</h2>
                </div>
                    
                <div class="panel-body">
                    <form class="form-horizontal" >
                        <legend>Datos de la ubicación geografica</legend>
                            <div class="form-group">
                                <label for="" class="col-lg-1 control-label">Latitud:</label>
                                <div class="col-lg-12">
                                    <input class="form-control" value=  <%= @ubicacion_geo.latitude %> disabled = true>
                                </div>
                            </div>    
                            <div class="form-group">
                                <label for="" class="col-lg-1 control-label">Longitud:</label>
                                <div class="col-lg-12">
                                    <input class="form-control" value=  <%= @ubicacion_geo.longitude %> disabled = true>
                                </div>
                            </div>    
                            <div class="form-group">
                                <label for="" class="col-lg-1 control-label">Dirección:</label>
                                <div class="col-lg-12">
                                    <input class="form-control" value= <%= @ubicacion_geo.address %> disabled = true>
                                </div>
                            </div>    
                            <div class="form-group">
                                <label for="" class="col-lg-1 control-label">Titulo:</label>
                                <div class="col-lg-12">
                                    <input class="form-control" value= <%= @ubicacion_geo.title %> disabled = true>
                                </div>
                            </div>  
                            <div class="form-group">
                                <label for="" class="col-lg-1 control-label">Descripción:</label>
                                <div class="col-lg-12">
                                    <%= text_area_tag 'd', @ubicacion_geo.description, :class =>"form-control", :disabled =>true %>
                                </div>
                            </div>  
                            <div class="form-group">
                                <div class="col-lg-12 text-center">
                                    <%= link_to 'Volver', empresa_ubicacion_geos_path,class: "btn btn-info btn-raised" %>
                                </div>
                            </div>
                    </form>
                </div>
          </div>
        </div>
        <div class="col-md-6">
              <div class="panel panel-info " >
                <div class="panel-heading">
                    <h2 class="panel-title text-center">Mapa</h2>
                </div>      
                <div class="panel-body">   
                  <div id="map" style='width: 520px; height: 400px; ' ></div>
                </div>
              </div>
        </div>
      </div>
</div>


<script type= "text/javascript">

handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>




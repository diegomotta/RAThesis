<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="container">
      <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h2 class="panel-title text-center" >Mapa Geográfico</h2>
                </div>
                <div class="col-lg-offset-4">
                    <div class="btn-group">
                        <a ><%= link_to "<button type='button'class='btn btn-info'>Nuevo</button>".html_safe, new_empresa_ubicacion_geo_path%></a> 
                    </div>
                    <div class="btn-group">    
                        <a ><%= link_to "<button type='button'class='btn btn-info'>Volver</button>".html_safe, empresa_path(@empresa)%></a>   
                    </div>
                    <div class="btn-group">    
                        <a ><%= link_to "<button type='button'class='btn btn-info'>Ver mapa completo</button>".html_safe,   mapComplet_empresa_ubicacion_geos_path%></a>   
                    </div>
                </div>
                <div class="panel-body">
                  <table class="table table-striped "> 
                    <tr class="info ">
                      <th class="text-center">Latitud</th>
                      <th class="text-center">Longitud</th>
                      <th class="text-center">Direccion</th>
                      <th class="text-center">Descripcion</th>
                      <th class="text-center">Título</th>
                      <th class="text-center">Acciones</th>
                    </tr>
                    <% @ubicacion_geos.each do |ubicacion_geo| %>
                      <div class="row">
                        <tr class="active">
                          <td><%= ubicacion_geo.latitude %></td>
                          <td><%= ubicacion_geo.longitude %></td>
                          <td><%= ubicacion_geo.address %></td>
                          <td><%= ubicacion_geo.description %></td>
                          <td><%= ubicacion_geo.title %></td>
                          <td>
                               <div class="btn-group-vertical">
                                <a><%= link_to 'Ver', empresa_ubicacion_geo_path(@empresa,ubicacion_geo), :class => "btn btn-info" %></a>
                                  <a><%= link_to 'Editar', edit_empresa_ubicacion_geo_path(@empresa,ubicacion_geo), :class => "btn btn-info"%></a>
                                <a><%= link_to 'Eliminar',[ubicacion_geo.empresa, ubicacion_geo], method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-info"%></a>
                              </div>
                          </td>  
                        </tr>
                      </div> 
                    <% end %>
                  </table>
                </div>  
              </div>
            </div>


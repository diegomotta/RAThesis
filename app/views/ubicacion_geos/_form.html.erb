<%= form_for ([@empresa,@ubicacion_geo])  do |f| %>
  <% if @ubicacion_geo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<form class="form-horizontal" >
    <fieldset>
        <legend>Datos de Ubicación Geográfica</legend>
        <div class="form-group">
          <label for="" class="col-lg-2 control-label">Latitud:</label>
          <div class="col-lg-12">
            <%= f.text_field :latitude, class: "form-control", placeholder: "Latitud"%>
          </div>
        </div>
        <div class="form-group">
          <label for="" class="col-lg-2 control-label">Longitud:</label>
          <div class="col-lg-12">
            <%= f.text_field :longitude, class: "form-control", placeholder: "Longitud"%>
          </div>
        </div>          
        <div class="form-group">
          <label for="" class="col-lg-2 control-label">Dirección:</label>
          <div class="col-lg-12">
            <%= f.text_field :address, class: "form-control", placeholder: "Dirección"%>
          </div>
        </div>          
        <div class="form-group">
          <label for="" class="col-lg-2 control-label">Titulo:</label>
          <div class="col-lg-12">
            <%= f.text_area :title, class: "form-control", placeholder: "Titulo"%>
          </div>
        </div> 
        <div class="form-group">
          <label for="" class="col-lg-2 control-label">Descripción:</label>
          <div class="col-lg-12">
            <%= f.text_area :description, class: "form-control", placeholder: "Descripción"%>
          </div>
        </div> 

          <div class="form-group">
              <label for="" class="col-lg-2 control-label">Imagen:</label>
            <div class="col-lg-12">
              <%= f.file_field :image, class: "form-control"%>
            </div>
          </div>        
        <div class="form-group">
            <div class="col-lg-12 text-center">
                <%= f.submit "Guardar", class: "btn btn-info btn-raised" %>
                <%= link_to 'Volver', empresa_ubicacion_geos_path,class: "btn btn-info btn-raised" %>
            </div>
        </div>
    </fieldset>
</form>
<% end %>


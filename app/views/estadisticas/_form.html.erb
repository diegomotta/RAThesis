<%= form_for([@empresa,@estadistica]) do |f| %>

  <% if @estadistica.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@estadistica.errors.count, "error") %> prohibited this estadistica from being saved:</h2>

      <ul>
      <% @estadistica.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <form class="form-horizontal" >
      <fieldset>
        <legend>Datos de Estadisticas</legend>
        <div class="form-group">
          <label for="" class="col-lg-5 control-label">Calificación:</label>
          <div class="col-lg-12">
            <%= f.text_field :califproducto, class: "form-control", placeholder: ""%>
          </div>
        </div>  
        <div class="form-group">
          <label for="" class="col-lg-5 control-label">Precio del producto:</label>
          <div class="col-lg-12">
            <%= f.text_field :precio, class: "form-control", placeholder: ""%>
          </div>
        </div>  
        <div class="form-group">
          <label for="" class="col-lg-5 control-label">Imagen del Producto</label>
          <div class="col-lg-12">
            <%= f.text_field :imagenempresareg, class: "form-control", placeholder: ""%>
          </div>
        </div>   
        <div class="form-group">
            <label for="" class="col-lg-5 control-label">¿Como se entero?</label>
            <div class="col-lg-12">
              <%= f.text_field :enteroprod, class: "form-control", placeholder: ""%>
            </div>
        </div>                                          
        <div class="form-group">
            <label for="" class="col-lg-5 control-label">¿Que sabor prefiere?</label>
            <div class="col-lg-12">
              <%= f.text_field :sabortoman, class: "form-control", placeholder: ""%>
            </div>
        </div> 
        <div class="form-group">
            <label for="" class="col-lg-5 control-label">¿Como consume?</label>
            <div class="col-lg-12">
              <%= f.text_field :cuantoconsumo, class: "form-control", placeholder: ""%>
            </div>
        </div> 
        <div class="form-group">
            <label for="" class="col-lg-5 control-label">¿Que endulzante?</label>
            <div class="col-lg-12">
              <%= f.text_field :justifprod, class: "form-control", placeholder: ""%>
            </div>
        </div>  
        <div class="form-group">
            <label for="" class="col-lg-5 control-label">¿Utiliza alguna hierba natural?</label>
            <div class="col-lg-12">
              <%= f.text_field :yerbamedicinal, class: "form-control", placeholder: ""%>
            </div>
        </div>      
         <div class="form-group">
            <label for="" class="col-lg-5 control-label">¿Otra alternativa?</label>
            <div class="col-lg-12">
              <%= f.text_field :otroproducto, class: "form-control", placeholder: ""%>
            </div>
        </div>   
       
       <div class="form-group">
         <div class="col-lg-12 text-center">
             <a><%= f.submit "Guardar", class: "btn btn-info btn-raised" %></a>     
            <a><%= link_to "Volver", empresa_estadisticas_path,class: "btn btn-info btn-raised" %></a>  
        </div>               
      </div>   
      </fieldset>
      </form>         
<% end %>

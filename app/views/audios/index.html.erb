<script src='https://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js' type='text/javascript'></script>
<h1>Listing audios</h1>

<table>
  <thead>
    <tr>
      <th>Audio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @audios.each do |audio| %>
      <tr>
        <td><%= audio.audio %></td> 
        <td><%= link_to 'Show', audio %></td>
        <td><%= link_to 'Edit', edit_audio_path(audio) %></td>
        <td><%= link_to 'Destroy', audio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% @audio_id = audio.audio %>
        <EMBED id='music' SRC="<%= @audio_id %>" >
      </audio>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Audio', new_audio_path %>
